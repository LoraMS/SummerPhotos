    //- link(rel="stylesheet" href="/resources/demos/style.css")
    block scripts
body
    header.navbar.navbar-fixed-top
        .row
            #logo.col-md-2.col-md-offset-1.text-left
                a(href="/home") Summer in Photos
            #nav.col-md-7.col-md-offset-1
                .row
                    #menu.col-md-8
                        +navigation
                    if !user
                        #signin.col-md-4
                            a(href="/login")
                                    button#signIn.btn.btn-defoult(type="") Sign In
                            a(href="/register")
                                    button#signUp.btn.btn-defoult(type="") Sign Up
                    if user
                        #loged.col-md-4
                            a(href="/user/profile")
                                span.glyphicon.glyphicon-user
                                    span User Profile
                            a(href="/logout")
                                    button.btn.btn-defoult(type="") Sign Out
    #wrapper
        block container
        != toasts
    footer.row.navbar.navbar-fixed-bottom
        .col-md-5.col-md-offset-1.text-left
            | &copy; Copyright 2017 Web Application with Node.js
        .col-md-6