extends ../_layout
include ../_mixins/_aside
block scripts                     
    script(src="/libs/jquery/dist/jquery.js")
    script(src="/libs/bootstrap/dist/js/bootstrap.js")
    script(src="/static/js/latest.js")    
    script(src="/static/js/popular.js")  
    script(src="/static/js/destinations.js")
    
block container  
    .all-guides.container
        .row
            .col-md-3.col-md-offset-1
                +asides
            .col-md-8
                .row
                    if user && user.role === "admin"
                        .col-md-12.text-right#add-guide
                            a(href="guides/form" id="guidesForm" class="btn btn-default btn-block pull-right" role="button") 
                                | Add Guide
                .row
                    each item in model
                        .guides-container
                            h3.text-center
                                a(href="/guides/" + item._id) #{item.country}
                            p
                                |    #{item.info}
                            img(src = item.image, alt="image")